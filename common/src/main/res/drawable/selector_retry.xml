<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <stroke android:width="0.5dp" android:color="@color/common_enable"/>
            <corners android:radius="15dp" />
            <solid android:color="@color/common_trans_white" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="0.5dp" android:color="@color/common_normal"/>
            <corners android:radius="15dp" />
            <solid android:color="@color/common_white"/>
        </shape>
    </item>
</selector>