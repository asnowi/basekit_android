<resources>
    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_primary</item>
        <item name="colorPrimaryDark">@color/common_primaryDark</item>
        <item name="colorAccent">@color/common_accent</item>
    </style>

    <style name="CommonNoTitleBarTheme" parent="CommonAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonSplashTheme" parent="CommonNoTitleBarTheme">
        <item name="android:statusBarColor">@color/common_trans</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="CommonFullscreenTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommonTransitionsTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="common_style_toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_toolbar</item>
    </style>

    <style name="common_style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/common_font_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_style_title_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/common_font_text</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="common_style_account">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="common_style_account_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="common_style_account_input">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">@dimen/common_font_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>